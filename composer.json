{
    "name": "internetofvoice/libvoice",
    "description": "A PHP library for developing custom voice assistant interactions (skills)",
    "license": "MIT",
    "type": "library",
    "homepage": "http://www.internet-of-voice.de",
    "authors": [
        {
            "name": "Alexander Schmidt",
            "email": "a.schmidt@internet-of-voice.de",
            "homepage": "http://www.internet-of-voice.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0 < 8.0",
        "php": ">=7.1"
    },
    "autoload": {
        "psr-4": {
            "InternetOfVoice\\LibVoice\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "test/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-custom-skill": "vendor/bin/phpunit --group custom-skill",
        "test-smarthome": "vendor/bin/phpunit --group smarthome"
    }
}
